{
  "name": "@sp-packages/lintrc",
  "description": "A lightweight CLI tool for running multiple linters efficiently.",
  "version": "1.5.2",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Senthilprabu Ponnusamy",
    "email": "info@senthilprabu.in",
    "url": "https://www.senthilprabu.in"
  },
  "funding": "https://github.com/sponsors/iamsenthilprabu",
  "keywords": [
    "lint",
    "lintrc",
    "eslint",
    "prettier",
    "typescript",
    "php",
    "js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SP-Packages/lintrc.git"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "bin": {
    "lintrc": "dist/bin/lintrc.js"
  },
  "exports": {
    ".": "./dist/lintrc.js",
    "./package.json": "./package.json"
  },
  "types": "./dist/lintrc.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "depcheck": {
    "ignores": [
      "codecov",
      "conventional-changelog-conventionalcommits",
      "cspell",
      "depcheck",
      "husky",
      "markdownlint-cli",
      "semantic-release",
      "@commitlint/cli",
      "@commitlint/config-conventional",
      "@semantic-release/changelog",
      "@semantic-release/commit-analyzer",
      "@semantic-release/exec",
      "@semantic-release/git",
      "@semantic-release/npm",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@sp-packages/cspell-dictionary",
      "@sp-packages/depkit",
      "@sp-packages/lintrc",
      "@types/node",
      "@vitest/coverage-v8"
    ]
  },
  "lint-staged": {
    "*": [
      "npx lintrc"
    ]
  },
  "dependencies": {
    "@sp-packages/printer": "^2.0.0",
    "commander": "^14.0.0",
    "p-limit": "^6.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.29.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@sp-packages/cspell-dictionary": "^1.2.39",
    "@sp-packages/depkit": "^2.4.1",
    "@sp-packages/lintrc": "^1.0.0",
    "@types/node": "^24.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "codecov": "^3.8.3",
    "conventional-changelog-conventionalcommits": "^9.0.0",
    "cspell": "^9.1.1",
    "depcheck": "^1.4.7",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-jsdoc": "^51.2.1",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.0",
    "semantic-release": "^24.2.5",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.34.1",
    "vitest": "^3.0.8"
  },
  "scripts": {
    "build": "tsc && esbuild dist/**/*.js --minify --outdir=dist --allow-overwrite --tree-shaking=true --platform=node",
    "postinstall": "husky install",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  }
}
